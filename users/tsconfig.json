{
	"compilerOptions": {
		"target": "ES2016",
		"typeRoots": ["./types/express", "./node_modules/@types"],
		"lib": ["es6"],
		"moduleResolution": "node",
		"module": "CommonJS",
		"baseUrl": "src",
		"noUnusedParameters": true,
		"allowJs": true,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/*.ts",
		"src/*.json",
		"src/**/*.json",
		"src/**/*.ts",
		"src/**/**/*.ts",
		".env",
		"server.ts",
		"src/index.ts"],
	"exclude": ["node_modules", "build/**/*"]
}
